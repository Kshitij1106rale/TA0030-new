rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * VeriHire AI Security Rules
     * 
     * Philosophy:
     * This ruleset implements a dual-role access model (HR and Candidate).
     * HR personnel have broad read access and manage candidate creation.
     * Candidates have ownership-based access to their own profile and documents.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isHR() {
      // Check if the user has a document in the hr_profiles collection
      return isSignedIn() && exists(/databases/$(database)/documents/hr_profiles/$(request.auth.uid));
    }

    // --- HR Profile Rules ---

    match /hr_profiles/{hrProfileId} {
      allow get, list: if isOwner(hrProfileId);
      allow create: if isOwner(hrProfileId);
      allow update, delete: if isOwner(hrProfileId);
    }

    // --- Candidate Profile and Subcollections ---

    match /candidate_profiles/{candidateProfileId} {
      // HR can view all candidates; Candidates can view their own.
      allow get, list: if isOwner(candidateProfileId) || isHR();
      
      // HR can create candidate profiles (invitations); Candidates can create their own.
      allow create: if isOwner(candidateProfileId) || isHR();
      
      // Both can update profile status or scores.
      allow update: if isOwner(candidateProfileId) || isHR();
      allow delete: if isHR();

      match /documents/{documentId} {
        allow get, list: if isOwner(candidateProfileId) || isHR();
        allow create: if isOwner(candidateProfileId) || isHR();
        allow update, delete: if isOwner(candidateProfileId) || isHR();
      }

      match /extracted_data/{extractedDataId} {
        allow get, list: if isOwner(candidateProfileId) || isHR();
        allow create: if isOwner(candidateProfileId) || isHR();
        allow update, delete: if isOwner(candidateProfileId) || isHR();

        match /education_entries/{entryId} {
          allow get, list: if isOwner(candidateProfileId) || isHR();
          allow create, update, delete: if isOwner(candidateProfileId) || isHR();
        }

        match /experience_entries/{entryId} {
          allow get, list: if isOwner(candidateProfileId) || isHR();
          allow create, update, delete: if isOwner(candidateProfileId) || isHR();
        }
      }

      match /verification_workflows/{workflowId} {
        allow get, list: if isOwner(candidateProfileId) || isHR();
        allow create, update: if isOwner(candidateProfileId) || isHR();
        allow delete: if isHR();

        match /mismatches/{mismatchId} {
          allow get, list: if isOwner(candidateProfileId) || isHR();
          allow create, update: if isOwner(candidateProfileId) || isHR();
          allow delete: if isHR();
        }

        match /employment_gaps/{gapId} {
          allow get, list: if isOwner(candidateProfileId) || isHR();
          allow create, update: if isOwner(candidateProfileId) || isHR();
          allow delete: if isHR();
        }
      }

      match /hiring_decisions/{decisionId} {
        allow get, list: if isOwner(candidateProfileId) || isHR();
        allow create: if isHR();
        allow update, delete: if isHR();
      }
    }
  }
}