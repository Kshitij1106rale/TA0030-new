
{
  "entities": {
    "CandidateProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CandidateProfile",
      "type": "object",
      "description": "Represents a candidate's profile, including personal details, verification status, and calculated scores.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "fullName": { "type": "string" },
        "role": { "type": "string" },
        "profileStatus": { "type": "string" },
        "isShortlisted": { "type": "boolean" },
        "trustScore": { "type": "number" },
        "fraudRiskScore": { "type": "number" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      }
    },
    "AuditLog": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "AuditLog",
      "type": "object",
      "description": "Records compliance actions taken by HR personnel.",
      "properties": {
        "id": { "type": "string" },
        "hrProfileId": { "type": "string" },
        "candidateId": { "type": "string" },
        "action": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "notes": { "type": "string" }
      }
    }
  },
  "firestore": {
    "structure": [
      {
        "path": "/audit_logs/{logId}",
        "definition": {
          "entityName": "AuditLog",
          "description": "Compliance logs for tracking HR decisions. Readable by HR, write-only by system/HR."
        }
      }
    ]
  }
}
